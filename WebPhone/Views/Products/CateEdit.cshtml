@model CateProductDTO

@{
    ViewData["Title"] = "Cập nhật";
}

<h1>Sửa danh mục sản phẩm</h1>

<h4>Danh mục sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="@Url.Action("CateEdit")" method="post">
            @Html.AntiForgeryToken()

            @Html.HiddenFor(m => m.Id)
            <div class="form-group">
                @Html.LabelFor(m => m.ParentId)
                @Html.DropDownListFor(
                    model => model.ParentId,
                    ViewBag.SelectList as SelectList,
                    "-- Không có --",
                    new { @class = "form-control" }
                )
                @Html.ValidationMessageFor(m => m.ParentId, "", new { @class = "text-danger small" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger small" })
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("CateIndex")">Quay lại</a>
</div>