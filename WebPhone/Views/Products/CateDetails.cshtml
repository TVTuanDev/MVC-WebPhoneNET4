@model CategoryProduct

@{
    ViewData["Title"] = "Chi tiết";
}

<h1>Chi tiết danh mục sản phẩm</h1>

<div>
    <h4>Danh mục sản phẩm</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên danh mục</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">
            @Model.CreateAt.ToString("dd/MM/yyyy HH:mm:ss")
        </dd>
        <dt class="col-sm-2">Ngày cập nhật</dt>
        <dd class="col-sm-10">
            @(Model.UpdateAt == null ? "" : Model.UpdateAt?.ToString("dd/MM/yyyy HH:mm:ss"))
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Sửa", "CateEdit", new { id = Model.Id }) |
    @Html.ActionLink("Quay lại", "CateIndex")
</div>
