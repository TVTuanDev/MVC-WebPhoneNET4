@model CateProductDTO

@{
    ViewData["Title"] = "Thêm mới";
}

<h1>Thêm mới danh mục sản phẩm</h1>

<h4>Danh mục sản phẩm</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="@Url.Action("CateCreate")" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.LabelFor(m => m.ParentId)
                @Html.DropDownListFor(
                    model => model.ParentId, // Thuộc tính của model
                    ViewBag.SelectList as SelectList, // Danh sách các tùy chọn
                    "-- Không có --", // Tùy chọn mặc định
                    new { @class = "form-control" } // Thuộc tính HTML bổ sung
                )
                @Html.ValidationMessageFor(m => m.ParentId, "", new { @class = "text-danger small" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CategoryName)
                @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger small" })
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Tạo mới" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="@Url.Action("CateIndex")">Quay lại</a>
</div>
