@model IEnumerable<Role>

@{
    ViewData["Title"] = "Danh sách quyền";
    int count = 0;
}

<h1>@ViewData["Title"]</h1>

<p>
    <a href="@Url.Action("Create")">Tạo mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>STT</th>
            <th>Tên quyền</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@(++count)</td>
                <td>
                    @Html.DisplayFor(modelItem => item.RoleName)
                </td>
                <td>
                    @item.CreateAt.ToString("dd/MM/yyyy HH:mm:ss")
                </td>
                <td>
                    @(item.UpdateAt == null ? "" : item.UpdateAt?.ToString("dd/MM/yyyy HH:mm:ss"))
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Xem", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
