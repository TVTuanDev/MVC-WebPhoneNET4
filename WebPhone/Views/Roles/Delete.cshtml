@model WebPhone.EF.Role

@{
    ViewData["Title"] = "Xóa quyền";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc muốn xóa không?</h3>
<div>
    <h4>Role</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Tên quyền</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RoleName)
        </dd>
        <dt class="col-sm-2">Ngày tạo</dt>
        <dd class="col-sm-10">
            @Model.CreateAt.ToString("dd/MM/yyyy HH/mm/ss")
        </dd>
        <dt class="col-sm-2">Ngày cập nhật</dt>
        <dd class="col-sm-10">
            @(Model.UpdateAt == null ? "" : Model.UpdateAt?.ToString("dd/MM/yyyy HH:mm:ss"))
        </dd>
    </dl>

    <form action="@Url.Action("Delete")" method="post">
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.Id)
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a href="@Url.Action("Index")">Quay lại</a>
    </form>
</div>
